<mvc:View controllerName="my_cat_list.controller.HomePage"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:tnt="sap.tnt"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns="sap.m"
	height="100%">

	<tnt:ToolPage sideExpanded="false"
		class="my-toolpage">
		<tnt:header>
			<tnt:ToolHeader height="100%"
				width="auto"
				design="Transparent">
				<Button icon="sap-icon://menu2"
					width="auto"
					tooltip="Toggle Side Navigation"
					press="_onToggleButtonPress" />
				<ToolbarSpacer width="1.5rem" />
				<Text text="BEST SHOP EVER"
					maxLines="1"
					wrapping="false"
					textAlign="Center"
					class="sapUiSmallMargin" />
			</tnt:ToolHeader>
		</tnt:header>

		<tnt:sideContent>
			<tnt:SideNavigation>
				<tnt:NavigationList width="auto"
					itemSelect=".onMenuItemSelect">
					<tnt:NavigationListItem custom:to="products"
						icon="sap-icon://heatmap-chart"
						text="All Products" />
					<tnt:NavigationListItem custom:to="overview"
						icon="sap-icon://group-2"
						text="Categories" />
					<tnt:NavigationListItem custom:to="cart"
						icon="sap-icon://cart"
						text="Cart" />
				</tnt:NavigationList>
			</tnt:SideNavigation>
		</tnt:sideContent>

		<tnt:mainContents>
			<l:BlockLayout background="Dashboard">
				<l:content>
					<l:BlockLayoutRow>
						<l:content>

							<l:BlockLayoutCell title="{i18n>HomePageView.SearchForProducts}">
								<l:content>
									<core:Icon src="sap-icon://heatmap-chart"
										tooltip="{i18n>HomePageView.ProductsTooltip}"
										press=".onMenuItemSelect"
										size="4rem"
										color="#168282"
										activeColor="#116464"
										hoverColor="#006794" />
								</l:content>
							</l:BlockLayoutCell>

							<l:BlockLayoutCell title="{i18n>HomePageView.BrowseCategories}">
								<l:content>
									<core:Icon tooltip="{i18n>HomePageView.CategoriesTooltip}"
										src="sap-icon://group-2"
										size="4rem"
										color="#168282"
										activeColor="#116464"
										hoverColor="#006794" />
								</l:content>
							</l:BlockLayoutCell>

							<l:BlockLayoutCell title="{i18n>HomePageView.ManageYouCart}">
								<l:content>
									<core:Icon tooltip="{i18n>HomePageView.CartTooltip}"
										src="sap-icon://cart"
										size="4rem"
										color="#168282"
										activeColor="#116464"
										hoverColor="#006794" />
								</l:content>
							</l:BlockLayoutCell>

						</l:content>
					</l:BlockLayoutRow>

					<l:BlockLayoutRow>
						<l:content>
							<l:BlockLayoutCell title="">
								<l:content>
									<ObjectListItem intro="Intro."
										title="Item"
										icon="sap-icon://simple-payment"
										number="1,000"
										numberUnit="USD"
										type="Active">
										<attributes />
										<firstStatus />
										<secondStatus />
									</ObjectListItem>
								</l:content>
							</l:BlockLayoutCell>
							<l:BlockLayoutCell title="">
								<l:content>
									<ObjectListItem intro="Intro."
										title="Item"
										icon="sap-icon://simple-payment"
										number="1,000"
										numberUnit="USD"
										type="Active">
										<attributes />
										<firstStatus />
										<secondStatus />
									</ObjectListItem>
								</l:content>
							</l:BlockLayoutCell>
							<l:BlockLayoutCell title="">
								<l:content>
									<ObjectListItem intro="Intro."
										title="Item"
										icon="sap-icon://simple-payment"
										number="1,000"
										numberUnit="USD"
										type="Active">
										<attributes />
										<firstStatus />
										<secondStatus />
									</ObjectListItem>
								</l:content>
							</l:BlockLayoutCell>
							<l:BlockLayoutCell title="">
								<l:content>
									<ObjectListItem intro="Intro."
										title="Item"
										icon="sap-icon://simple-payment"
										number="1,000"
										numberUnit="USD"
										type="Active">
										<attributes />
										<firstStatus />
										<secondStatus />
									</ObjectListItem>
								</l:content>
							</l:BlockLayoutCell>
						</l:content>
					</l:BlockLayoutRow>

					<l:BlockLayoutRow>
						<l:content>
							<l:BlockLayoutCell title="Suppliers">
								<l:content>
									<Title id='supplCount'
										width="auto"
										titleStyle="H3" />
								</l:content>
							</l:BlockLayoutCell>
							<l:BlockLayoutCell title="Products">
								<l:content>
									<Title text="{category>Products/$count}"
										id="prodCount"
										width="auto"
										titleStyle="H3" />
								</l:content>
							</l:BlockLayoutCell>
						</l:content>
					</l:BlockLayoutRow>

					<l:BlockLayoutRow>
						<l:content>
							<l:BlockLayoutCell>
								<l:content>

									<FlexBox alignContent="Stretch"
										alignItems="Stretch"
										direction="Column"
										width="100%"
										wrap="Wrap"
										justifyContent="SpaceBetween">
										<items>
											<Title text="Popular products"
												textAlign="Center"
												titleStyle="H3"
												width="auto"
												class="sapUiSmallMarginBegin" />
											<grid:CSSGrid gridAutoFlow="Row"
												gridGap="1rem"
												gridTemplateColumns="1fr 1fr 1fr 1fr"
												gridTemplateRows="1fr 1fr"
												width="100%"
												items="{promoted>/popProducts}">
												<grid:items>
													<ObjectListItem intro="{promoted>ProductID}"
														title="{promoted>ProductName}"
														
														icon="sap-icon://product"
														number="{promoted>UnitPrice}"
														numberUnit="USD"
														type="Active">
														<layoutData>
															<FlexItemData alignSelf="Auto"
																backgroundDesign="Transparent"
																baseSize="25%"
																maxWidth="25%"
																growFactor="0"
																order="0"
																shrinkFactor="0" />
														</layoutData>
													</ObjectListItem>
												</grid:items>
											</grid:CSSGrid>
										</items>
									</FlexBox>
								</l:content>
							</l:BlockLayoutCell>

						</l:content>
					</l:BlockLayoutRow>

				</l:content>
			</l:BlockLayout>

		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>
