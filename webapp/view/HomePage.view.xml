<mvc:View controllerName="my_cat_list.controller.HomePage"
	xmlns:layout="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns="sap.m"
	height="100%">

	<tnt:ToolPage sideExpanded="false"
		class="my-toolpage">
		<tnt:header>
			<tnt:ToolHeader height="100%"
				width="auto"
				design="Transparent">
				<Button icon="sap-icon://menu2"
					width="auto"
					tooltip="Toggle Side Navigation"
					press="_onToggleButtonPress" />
				<ToolbarSpacer width="1.5rem" />
				<Text text="BEST SHOP EVER"
					maxLines="1"
					wrapping="false"
					textAlign="Center"
					class="sapUiSmallMargin" />
			</tnt:ToolHeader>
		</tnt:header>

		<tnt:sideContent>
			<tnt:SideNavigation>
				<tnt:NavigationList width="auto"
					itemSelect=".onItemSelect">
					<tnt:NavigationListItem custom:to="products"
						icon="sap-icon://heatmap-chart"
						text="All Products" />
					<tnt:NavigationListItem custom:to="overview"
						icon="sap-icon://group-2"
						text="Categories" />
					<tnt:NavigationListItem custom:to="cart"
						icon="sap-icon://cart"
						text="Cart" />
				</tnt:NavigationList>
			</tnt:SideNavigation>
		</tnt:sideContent>

		<tnt:mainContents>
			<layout:BlockLayout background="Dashboard">
				<layout:content>
					<layout:BlockLayoutRow>
						<layout:content>

							<layout:BlockLayoutCell width="1"
								title="{i18n>HomePageView.SearchForProducts}">
								<layout:content>
									<core:Icon src="sap-icon://heatmap-chart"
										size="4rem"
										color="#168282"
										activeColor="#116464"
										hoverColor="#006794"
										tooltip="{i18n>HomePageView.ProductsTooltip}" />
								</layout:content>
							</layout:BlockLayoutCell>

							<layout:BlockLayoutCell width="1"
								title="{i18n>HomePageView.BrowseCategories}">
								<layout:content>
									<core:Icon src="sap-icon://group-2"
										size="4rem"
										color="#168282"
										activeColor="#116464"
										hoverColor="#006794"
										tooltip="{i18n>HomePageView.CategoriesTooltip}" />
								</layout:content>
							</layout:BlockLayoutCell>

							<layout:BlockLayoutCell width="1"
								title="{i18n>HomePageView.ManageYouCart}">
								<layout:content>
									<core:Icon src="sap-icon://cart"
										size="4rem"
										color="#168282"
										activeColor="#116464"
										hoverColor="#006794"
										tooltip="{i18n>HomePageView.CartTooltip}" />
								</layout:content>
							</layout:BlockLayoutCell>
							
						</layout:content>
					</layout:BlockLayoutRow>

					<layout:BlockLayoutRow>
						<layout:content>
							<layout:BlockLayoutCell width="1"
								title="">
								<layout:content>
									<layout:VerticalLayout width="100%">
										<layout:content>
											<ObjectListItem intro="Intro."
												title="Item"
												icon="sap-icon://simple-payment"
												number="1,000"
												numberUnit="USD"
												type="Active">
												<attributes />
												<firstStatus />
												<secondStatus />
											</ObjectListItem>
										</layout:content>
									</layout:VerticalLayout>
								</layout:content>
							</layout:BlockLayoutCell>
							<layout:BlockLayoutCell width="1"
								title="">
								<layout:content>
									<layout:VerticalLayout width="100%">
