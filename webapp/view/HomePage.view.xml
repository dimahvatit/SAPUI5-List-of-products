<mvc:View controllerName="my_cat_list.controller.HomePage"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:tnt="sap.tnt"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns="sap.m"
	height="100%">

	<tnt:ToolPage sideExpanded="false"
		class="my-toolpage">
		<tnt:header>
			<tnt:ToolHeader height="100%"
				width="auto"
				design="Transparent">
				<Button icon="sap-icon://menu2"
					width="auto"
					tooltip="Toggle Side Navigation"
					press="_onToggleButtonPress" />
				<ToolbarSpacer width="1.5rem" />
				<Text text="BEST SHOP EVER"
					maxLines="1"
					wrapping="false"
					textAlign="Center"
					class="sapUiSmallMargin" />
			</tnt:ToolHeader>
		</tnt:header>

		<tnt:sideContent>
			<tnt:SideNavigation>
				<tnt:NavigationList width="auto"
					itemSelect=".onMenuItemSelect">
					<tnt:NavigationListItem custom:to="products"
						icon="sap-icon://heatmap-chart"
						text="All Products" />
					<tnt:NavigationListItem custom:to="overview"
						icon="sap-icon://group-2"
						text="Categories" />
					<tnt:NavigationListItem custom:to="cart"
						icon="sap-icon://cart"
						text="Cart" />
				</tnt:NavigationList>
			</tnt:SideNavigation>
		</tnt:sideContent>

		<tnt:mainContents>
			<l:BlockLayout background="Dashboard">
				<l:BlockLayoutRow>
					<l:BlockLayoutCell title="{i18n>HomePageView.SearchForProducts}">
						<core:Icon tooltip="{i18n>HomePageView.ProductsTooltip}"
							src="sap-icon://heatmap-chart"
							press=".onMenuItemSelect"
							custom:to="products"
							size="4rem"
							color="#168282"
							activeColor="#116464"
							hoverColor="#006794" />
					</l:BlockLayoutCell>

					<l:BlockLayoutCell title="{i18n>HomePageView.BrowseCategories}">
						<core:Icon tooltip="{i18n>HomePageView.CategoriesTooltip}"
							press=".onMenuItemSelect"
							custom:to="overview"
							src="sap-icon://group-2"
							size="4rem"
							color="#168282"
							activeColor="#116464"
							hoverColor="#006794" />
					</l:BlockLayoutCell>

					<l:BlockLayoutCell title="{i18n>HomePageView.ManageYouCart}">
						<core:Icon tooltip="{i18n>HomePageView.CartTooltip}"
							src="sap-icon://cart"
							press=".onMenuItemSelect"
							custom:to="cart"		
							size="4rem"
							color="#168282"
							activeColor="#116464"
							hoverColor="#006794" />
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>

				<l:BlockLayoutRow class="last-viewed">
					<l:BlockLayoutCell title="">
						<ObjectListItem intro="Intro."
							title="Item"
							icon="sap-icon://product"
							number="1,000"
							numberUnit="USD"
							type="Active">
						</ObjectListItem>
					</l:BlockLayoutCell>

					<l:BlockLayoutCell title="">
						<ObjectListItem intro="Intro."
							title="Item"
							icon="sap-icon://product"
							number="1,000"
							numberUnit="USD"
							type="Active">
						</ObjectListItem>
					</l:BlockLayoutCell>

					<l:BlockLayoutCell title="">
						<ObjectListItem intro="Intro."
							title="Item"
							icon="sap-icon://product"
							number="1,000"
							numberUnit="USD"
							type="Active">
						</ObjectListItem>
					</l:BlockLayoutCell>

					<l:BlockLayoutCell title="">
						<ObjectListItem intro="Intro."
							title="Item"
							icon="sap-icon://product"
							number="1,000"
							numberUnit="USD"
							type="Active">
						</ObjectListItem>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>

				<l:BlockLayoutRow>
					<l:BlockLayoutCell title="{i18n>HomePageView.Suppliers}">
						<Title id='supplCount'
							width="auto"
							titleStyle="H3" />
					</l:BlockLayoutCell>
					<l:BlockLayoutCell title="{i18n>HomePageView.Products}">
						<Title text="{category>Products/$count}"
							id="prodCount"
							width="auto"
							titleStyle="H3" />
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>

				<l:BlockLayoutRow>
					<l:BlockLayoutCell class="pop-products">
						<Title text="{i18n>HomePageView.PopularProducts}"
							textAlign="Center"
							titleStyle="H3"
							width="auto"
							class="sapUiSmallMarginBegin" />
						<grid:CSSGrid items="{promoted>/popProducts}"
							class="sapUiSmallMarginTopBottom"
							gridTemplateColumns="repeat(auto-fill, minmax(22rem, 1fr))"
							gridAutoRows="minmax(6rem, 8rem)"
							gridGap="1rem"
							gridRowGap="2rem">
							<grid:items>
								<ObjectListItem intro="ID: {promoted>ProductID}"
									title="{promoted>ProductName}"
									icon="sap-icon://product"
									number="{
										parts: [{path: 'promoted>UnitPrice'}, {path: 'measures>/currency'}],
										formatter: '.formatter.productPrice'
									}"
									type="Active" />
							</grid:items>
						</grid:CSSGrid>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
			</l:BlockLayout>
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>
