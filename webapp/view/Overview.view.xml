<mvc:View
    controllerName="my_cat_list.controller.Overview"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true">
    <Page
        title="{i18n>appTitle}"
        showNavButton="true"
        navButtonPress='.onNavBack'>
        <content>
            <List
                id="catList"
                class="sapUiResponsiveMargin"
                width="auto"
                items="{
                    path: 'category>/Categories',
                    parameters: {expand: 'Products'}
                }">
                <headerToolbar>
                    <Toolbar class="sapUiTinyMarginBottom category-list-toolbar">
                        <Title text="{i18n>categoryListTitle}"/>
                        <ToolbarSpacer width="1rem"/>
                        <SearchField width="25%" liveChange='.onFilterCategories' placeholder="{i18n>searchPlaceholder}"/>
                        <ToolbarSpacer />
                        <Text text="{i18n>listItemStatusText}"/>
                    </Toolbar>
                </headerToolbar>
                <items>
                    <ObjectListItem
                        class="category-list-item sapUiSmallMarginbBottom"
                        title="{category>CategoryName}"
                        number="{= ${category>Products/}.length}"
                        type="Navigation"
                        press='.onPress'>
                        <ObjectAttribute text="{category>Description}"/>
                    </ObjectListItem>
                </items>
            </List>
        </content>
    </Page>
</mvc:View>