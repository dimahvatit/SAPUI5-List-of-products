<mvc:View
    controllerName="my.category.list.controller.CategoryList"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
    <List
        id="catList"
        class="sapUiResponsiveMargin"
        width="auto"
        items="{
            path: 'category>/Categories',
            parameters: {expand: 'Products'}
        }">
        <headerToolbar>
            <Toolbar>
                <Title text="{i18n>categoryListTitle}"/>
                <ToolbarSpacer />
                <SearchField width="50%" liveChange=".onFilterCategories" placeholder="{i18n>searchPlaceholder}"/>
            </Toolbar>
        </headerToolbar>
        <items>
            <ObjectListItem
                class="category-list-item sapUiSmallMarginbBottom"
                title="{category>CategoryName}"
                number="ID {category>CategoryID}"
                type="Navigation"
                press=".onPress">
                <ObjectAttribute
                    text="{
                        path: 'category>Description'
                    }"/>
            </ObjectListItem>
        </items>
    </List>
</mvc:View>