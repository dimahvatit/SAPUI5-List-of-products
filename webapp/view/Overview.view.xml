<mvc:View controllerName="my_cat_list.controller.Overview"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true">
    <Page title="{i18n>appTitle}"
        showNavButton="true"
        navButtonPress='onNavBack'>
        <content>
            <List id="catList"
                class="sapUiResponsiveMargin"
                width="auto"
                items="{
                    path: 'category>/Categories',
                    parameters: {expand: 'Products'}
                }">
                <headerToolbar>
                    <Toolbar class="sapUiTinyMarginBottom category-list-toolbar">
                        <Title text="{i18n>categoryListTitle}" />
                        <ToolbarSpacer />
                        <SearchField width="30%"
                            liveChange='.onFilterCategories'
                            placeholder="{i18n>searchPlaceholder}" />
                    </Toolbar>
                </headerToolbar>
                <items>
                    <ObjectListItem class="category-list-item sapUiSmallMarginbBottom"
                        title="{category>CategoryName}"
                        number="{= ${category>Products/}.length}"
                        numberUnit="{i18n>listItemStatusText}"
                        type="Navigation"
                        press='.onPress'>
                        <ObjectAttribute text="{category>Description}" />
                    </ObjectListItem>
                </items>
            </List>
        </content>
    </Page>
</mvc:View>