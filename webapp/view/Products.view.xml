<mvc:View controllerName="my_cat_list.controller.Products"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns="sap.m" displayBlock="true">
    <Page title="{i18n>detialHeader}">
        <f:GridList id="gridList" items="{category>Products}" class="sapUiResponsiveContentPadding" headerText="{category>CategoryName}">
            <f:customLayout>
                <grid:GridBasicLayout gridTemplateColumns="repeat(auto-fit, minmax(16rem, 1fr))" gridGap="1rem" />
            </f:customLayout>
            <f:GridListItem counter="{category>ProductID}" press="onItemClick">
                <VBox height="100%">
                    <HBox height="100%" class="sapUiSmallMargin" alignItems="Start" justifyContent="SpaceBetween">
                        <VBox>
                            <Title text="{category>ProductName}" wrapping="true" />
                            <Label text="{category>QuantityPerUnit}" wrapping="true" />
                        </VBox>
                        <VBox>
                            <ObjectNumber number="{path: 'category>UnitPrice', formatter: '.formatter.productPrice'}" textAlign="End"/>
                        </VBox>
                    </HBox>
                </VBox>
            </f:GridListItem>
        </f:GridList>
    </Page>
</mvc:View>