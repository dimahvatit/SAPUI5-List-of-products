<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.f">
	<f:GridListItem press="onProductClick"
		type="Active">
		<VBox height="100%">
			<layoutData>
				<FlexItemData growFactor="1"
					shrinkFactor="0" />
			</layoutData>
			<HBox height="100%"
				class="sapUiSmallMargin"
				alignItems="Start"
				justifyContent="SpaceBetween">
				<VBox justifyContent="SpaceBetween"
					height="100%">
					<Title text="{category>ProductName}"
						wrapping="true"
						titleStyle="H3" />
					<Label text="{category>QuantityPerUnit}"
						wrapping="true" />
				</VBox>
				<VBox justifyContent="SpaceBetween"
					height="100%">
					<ObjectNumber number="{
							parts: [{path: 'category>UnitPrice'}, {path: 'measures>/currency'}],
							formatter: '.formatter.productPrice'
						}"
						textAlign="End" />
					<ObjectNumber number="{
							parts: [{ path: 'category>UnitsInStock' }, { path: 'i18n>ProductItemFragment.InStock' }],
							formatter: '.formatter.productQuantity'
						}"
						state="{
							path: 'category>UnitsInStock',
							formatter: '.formatter.quantityState'
						}"
						textAlign="End" />
				</VBox>
			</HBox>
		</VBox>
	</f:GridListItem>
</core:FragmentDefinition>
