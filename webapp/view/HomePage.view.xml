														title="Item"
														icon="sap-icon://simple-payment"
														number="1,000"
														numberUnit="USD"
														type="Active">
														<attributes />
														<firstStatus />
														<secondStatus />
													</ObjectListItem>
												</layout:content>
											</layout:VerticalLayout>
											<layout:VerticalLayout width="100%">
												<layout:content>
													<ObjectListItem intro="Intro."
														title="Item"
														icon="sap-icon://simple-payment"
														number="1,000"
														numberUnit="USD"
														type="Active">
														<attributes />
														<firstStatus />
														<secondStatus />
													</ObjectListItem>
												</layout:content>
											</layout:VerticalLayout>
											<layout:VerticalLayout width="100%">
												<layout:content>
													<ObjectListItem intro="Intro."
														title="Item"
														icon="sap-icon://simple-payment"
														number="1,000"
														numberUnit="USD"
														type="Active">
														<attributes />
														<firstStatus />
														<secondStatus />
													</ObjectListItem>
												</layout:content>
											</layout:VerticalLayout>
										</layout:content>
									</layout:Grid>
								</layout:content>
							</layout:BlockLayoutCell>

						</layout:content>
					</layout:BlockLayoutRow>

				</layout:content>
			</layout:BlockLayout>

		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>
