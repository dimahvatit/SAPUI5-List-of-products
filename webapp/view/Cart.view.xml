<mvc:View controllerName="my_cat_list.controller.Cart"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0">
    <Page backgroundDesign="Solid"
        navButtonTooltip="Back"
        showNavButton="true"
        navButtonPress="onNavBack"
        title="{i18n>CartView.YourShoppingCart}"
        titleAlignment="Center"
        titleLevel="H2">
        <content>
            <FlexBox width="100%">
                <items>
                    <List headerText="{i18n>CartView.ProductsInCart}"
                        delete=".onCartEntriesDelete"
                        includeItemInSelection="true"
                        mode="MultiSelect"
                        noDataText="No data"
                        backgroundDesign="Translucent"
                        items="{
                            path: 'cartProducts>/cartEntries',
                            sorter: {path: 'ProductName'}
                        }">
                        <headerToolbar>
                            <Toolbar>
                                <!--TODO: text arg. is set depending on the presence of the selected list items -->
                                <Button text="Order all or selected btn"
                                    type="Accept"
                                    class="sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom" />
                                <Button text="Delete selected or clear cart btn"
                                    type="Reject" />
                            </Toolbar>
                        </headerToolbar>
                        <items>
                            <ObjectListItem icon="sap-icon://product"
                                intro="{i18n>CartView.InCart} {cartProducts>Quantity}"
                                number="{
                                    parts: [{path: 'cartProducts>UnitPrice'}, {path: 'measures>/currency'}],
                                    type: 'sap.ui.model.type.Currency',
                                    formatOptions: {
                                        showMeasure: false
                                    }
                                }"
                                numberState="Success"
                                numberUnit="{measures>/currency}"
                                title="{cartProducts>ProductName}">
                                <attributes>
                                    <ObjectAttribute active="true"
                                        text="{i18n>CartView.AddToFavorites}" />
                                </attributes>
                            </ObjectListItem>
                        </items>
                        <layoutData>
                            <FlexItemData backgroundDesign="Solid"
                                baseSize="100%"
                                growFactor="1" />
                        </layoutData>
                    </List>
                </items>
            </FlexBox>
        </content>
    </Page>
</mvc:View>