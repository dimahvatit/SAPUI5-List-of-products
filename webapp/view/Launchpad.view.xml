<mvc:View controllerName="my_cat_list.controller.Launchpad"
    xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:dnd="sap.ui.core.dnd"
    xmlns:my="my_cat_list.control"
    xmlns="sap.m"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0">
    <Page navButtonTooltip="Back"
        navButtonPress="onNavBack"
        showNavButton="true"
        title="My Launchpad">
        <subHeader>
            <OverflowToolbar height="auto">
                <HBox alignItems="Center"
                    id="btnContainer">
                    <Button text="Main Page"
                        class="sapUiTinyMarginTopBottom sapUiSmallMarginBeginEnd"
                        type="Attention"
                        press=".onNavBtnClick"
                        custom:targetGroup="main" />
                    <Button text="Product info"
                        class="sapUiSmallMarginEnd"
                        press=".onNavBtnClick"
                        custom:targetGroup="group1" />
                    <Button text="Order info"
                        class="sapUiSmallMarginEnd"
                        press=".onNavBtnClick"
                        custom:targetGroup="group2" />
                </HBox>
            </OverflowToolbar>
        </subHeader>

        <FlexBox direction="Column"
            id="flexContainer"
            class="sapUiSmallMarginBegin sapUiLargeMarginTop">
            <VBox class="sapUiSmallMargin"
                id="group1"
                direction="Column"
                width="100%">
                <Title class="sapUiSmallMarginBottom"
                    text="Product info"
                    titleStyle="H2"
                    width="auto" />
                <my:TileContainer wrap="Wrap"
                    alignItems="Center"
                    alignContent="SpaceBetween">
                    <my:dragDropConfig>
                        <dnd:DragDropInfo dropPosition="Between"
                            drop=".onDrop"
                            sourceAggregation="items"
                            targetAggregation="items" />
                    </my:dragDropConfig>
                    <my:items>
                        <my:LPTile class="sapUiSmallMarginEnd sapUiSmallMarginBottom"
                            custom:navTarget="products"
                            press=".onTilePress"
                            header="Products"
                            headerImage="sap-icon://product"
                            subheader="total count"
                            width="15rem">
                            <TileContent footer="FOOTER"
                                footerColor="Critical">
                                <NumericContent value="77" />
                            </TileContent>
                        </my:LPTile>

                        <my:LPTile class="sapUiSmallMarginEnd sapUiSmallMarginBottom myLPTile"
                            header="Suppliers"
                            custom:type="dynamic"
                            headerImage="sap-icon://supplier"
                            subheader="total count"
                            width="15rem">
                            <TileContent footer="FOOTER"
                                footerColor="Critical">
                                <NumericContent value="50"
                                    id="suppliers-tile-count" />
                            </TileContent>
                        </my:LPTile>
                    </my:items>
                </my:TileContainer>
            </VBox>

            <VBox class="sapUiSmallMargin"
                id="group2"
                direction="Column"
                width="100%">
                <Title class="sapUiSmallMarginBottom"
                    text="Order info"
                    titleStyle="H2"
                    width="auto" />
                <my:TileContainer wrap="Wrap"
                    alignContent="SpaceBetween"
                    alignItems="Center">
                    <my:dragDropConfig>    
                        <dnd:DragDropInfo dropPosition="Between"
                            drop=".onDrop"
                            sourceAggregation="items"
                            targetAggregation="items" />
                    </my:dragDropConfig>
                    <my:items>
                        <my:LPTile class="sapUiSmallMarginEnd sapUiSmallMarginBottom myLPTile"
                            header="Orders"
                            custom:type="dynamic"
                            headerImage="sap-icon://activity-items"
                            subheader="total count"
                            width="15rem">
                            <TileContent footer="FOOTER"
                                footerColor="Critical">
                                <NumericContent value="156"
                                    id="orders-tile-count" />
                            </TileContent>
                        </my:LPTile>

                        <my:LPTile class="sapUiSmallMarginEnd sapUiSmallMarginBottom"
                            custom:navTarget="cart"
                            header="Cart"
                            press=".onTilePress"
                            headerImage="sap-icon://cart"
                            subheader="overview"
                            width="15rem">
                            <TileContent footer="FOOTER"
                                footerColor="Critical">
                                <NumericContent value="{= Object.keys(${cart>/cartEntries/}).length}" />
                            </TileContent>
                        </my:LPTile>
                    </my:items>
                </my:TileContainer>
            </VBox>
        </FlexBox>
    </Page>
</mvc:View>